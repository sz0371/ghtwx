.section {
  box-sizing: border-box;
  border-bottom: 1px solid #E9E9E9;
  padding:10px 12px 10px 0; 
}
.section-body {
  display: flex;
  align-items: center;
}
.section-icon {
  padding: 0 5px;
}
.section-content {
  padding-left: 10px;
  width: 100%;
}
.section-content-header {
  display: flex;
  align-items: center;
}
.section-edit {
  font-size: 12px;
  color: #999999;
  width: 60px;
  text-align: right;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
}
.section-content-title {
  flex: 1;
  color: #333333;
  font-size: 14px;
  height: 40px;
  overflow: hidden;
  line-height: 40px;
}
.section-content-body {
  color: #999999;
  font-size: 12px;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.section-content-footer {
  display: flex;
  align-items: center;
}
.price {
  color: #AD1717;
  font-size: 16px;
}
.number {
  font-size: 14px;
}

.icon-image {
  width: 20px;
  height: 20px;
}
.icon-image-control {
  width: 23px;
  height: 23px;
}
.goods-image {
  width: 92px;
  height: 92px;
}
.price {
  flex: 1;
}
input {
  display: inline-block;
  width: 45px;
  text-align: center;
}
/* 结算 */
.wrap {
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #F9F9F9;
  background-color: #fff;
  z-index: 999;
}
.box {
  display: flex;
  align-content: center;
  padding-left: 16px;
}
.box-header {
  display: flex;
  align-items: center;
  flex: 1;
}
.box-choose {
  color: #202020;
  font-size: 15px;
  margin-left: 10px;
}
.box-all {
  color: #ABABAB;
  margin-left: 13px;
  font-size: 12px;
}
.box-price {
  font-size: 16px;
  color: #AD1717;
  margin-left: 6px;
}
.box-body {
  text-align: right;
}
.box-button {
  width: 110px;
  height: 45px;
  color:#fff;
  background-color: #AD1717;
  text-align: center;
  line-height: 45px;
}