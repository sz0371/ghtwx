/* pages/goods/index.wxss */
@import "/wxParse/wxParse.wxss";
swiper {
  width: 100%;
  height: 375px;
}
.banner {
  width: 100%;
  height: 375px;
}
.first-photo {
  position: relative;
  height: 375px;
}
.first-photo-marker {
  position: absolute;
  bottom: 20px;
  text-align: center;
  z-index: 1;
  width: 100%;
}
.first-photo-icon {
  width: 48px;
  height: 24px;
  line-height: 24px;
  background-color: #B3B3B3;
  color: #fff;
  display: inline-block;
  border-radius: 12px;
  font-size: 12px;
  margin-left: 10px;
}
.first-photo-album {
  background-color: #000;
}

.goods {
  padding-left: 23px;
}
.goods-name {
  color: #2B2B2B;
  font-size: 19px;
  margin-top: 42px;
}
.goods-desc {
  color: #8C8C8C;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.goods-price {
  color: #AD1717;
  font-size: 15px;
  margin-top: 10px;
}
.goods-sales {
  height: 20px;
  margin: 10px 0;
}

.bar {
  height: 10px;
  background-color: #F4F4F4;
}


.evalution-item {
  border-bottom: 1px solid #F4F4F4;
  margin-bottom: 15px;
}
.evaluation-title {
  display: flex;
  align-items: center;
  font-size: 19px;
  color: #2B2B2B;
  padding:  10px 24px;
  border-bottom: 1px solid #F4F4F4;
  height: 47px;
  box-sizing: border-box;
}
.evaluation-title-left {
  font-weight: 600;
  flex: 1;
}
.evaluation-title-right {
  font-size: 12px;
  color: #6F6F6F;
}
.evalution-body {
  padding: 0 24px;
}
.evalution-item-header {
  display: flex;
  align-items: center;
}
.evalution-item-image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.evalution-item-name {
  font-size: 15px;
}
.evalution-item-time {
  color: #8C8C8C;
  font-size: 12px;
}
.evalution-item-body {
  font-size: 13px;
  padding: 10px 0 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 

.detail {
  padding-bottom: 56px;
}
.detail-title {
  font-size: 19px;
  color: #2B2B2B;
  padding:  10px 24px;
  border-bottom: 1px solid #F4F4F4;
  height: 47px;
  box-sizing: border-box;
  font-weight: 600;
}

.basket {
  display: flex;
  width: 100%;
  position: fixed;
  align-items: center;
  bottom: 0;
  left: 0;
  background-color: #fff;
}
.basket-shop {
  padding: 5px 18px;
}
.basket-shop-img {
  width: 40px;
  height: 40px;
}
.basket-buy-new {
  background-color: #3A3A3A;
  color: #fff;
  height: 56px;
  line-height: 56px;
  flex: 1;
  text-align: center;
}
.basket-join-basket {
  background-color: #e64340;
  color: #fff;
  height: 56px;
  line-height: 56px;
  flex: 1;
  text-align: center;
}

/* 立即购买 */
.basket-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 0;
  width: 100%;
  z-index: 999;
}
.basket-modal.active {
  height: 100%;
}
.basket-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(79,79,79,0.6);
}
.basket-modal-box {
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: #fff;
  width: 100%;
}
.basket-modal-box-header {
  display: flex;
  align-items: center;
  padding: 10px 24px;
}
.basket-modal-image {
  width: 98px;
  height: 83px;
}
.basket-modal-icon {
  width: 23px;
  height: 23px;
}
.basket-modal-box-info {
  flex: 1;
  padding-left: 17px;
}
.basket-modal-info-title {
  font-size: 18px;
  color: #2B2B2B;
}
.basket-modal-info-desc {
  font-size: 14px;
  color: #8C8C8C;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.basket-modal-price-box {
  display: flex;
  align-items: center;
  width: 100%;
}
.basket-modal-info-price {
  font-size: 16px;
  color: #AD1717;
  flex: 1;
}
.basket-modal-counter {
  font-size: 16px;
  display: flex;
  align-items: center;
}
.basket-modal-input {
  width: 50px;
  text-align: center;
}
/* 按钮 */
.basket-modal-btn {
  color: #fff;
  background-color: #e64340;
  text-align: center;
  font-size: 19px;
  height: 56px;
  line-height: 56px;
}
.basket-modal-box-body {
  padding-bottom: 30px;
}
.basket-modal-body-item {
  padding: 10px 24px;
  border-top: 1px solid #F4F4F4;
}
.basket-modal-item-title {
  font-size: 15px;
  color: #8C8C8C;
}
.basket-modal-item-tag {
  border: 1px solid #8C8C8C;
  color: #8C8C8C;
  height: 26px;
  line-height: 26px;
  padding: 0 15px;
  font-size: 15px;
  display: inline-block;
  margin-top: 10px;
  margin-right: 10px;
}
.basket-modal-item-tag.active {
  border-color: #e64340;
  color: #e64340;
}