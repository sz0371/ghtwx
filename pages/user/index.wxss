.user-info {
  display: flex;
  align-items: center;
  height: 98px;
  line-height: 98px;
  box-sizing: border-box;
  background-color: #3A3A3A;
  padding-left: 24px;
}
.user-info-avatar {
  width: 68px;
  height: 68px;
  border-radius: 50%;
}
.user-info-text {
  color: #fff;
  font-size: 15px;
  padding-left: 17px;
}

.list {
  padding: 0 29px;
}
.list-item {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #E9E9E9;
  height: 50px;
  line-height: 50px;
  box-sizing: border-box;
}
.list-item-image {
  width: 18px;
  height: 18px;
}
.list-item-text {
  flex: 1;
  color: #3F3F3F;
  font-size: 15px;
  margin-left: 9px;
}
.list-item-desc {
  color: #C8C7CD;
  font-size: 13px;
  margin-right: 9px;
}
.list-item-icon {
  width: 8px;
  height: 15px;
}