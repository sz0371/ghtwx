page {
  background-color:#F9F9F9;
  height:100%;
}

/* tab */
.tabs {
  display: flex;
  align-items: center;
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  box-sizing: border-box;
  border-bottom: 1px solid #F4F4F4;
  background-color: #fff;
  z-index: 999;
}
.tab-item {
  flex: 1;
  font-size: 14px;
  color: #A1A1A1;
  text-align: center;
}
.tab-item.active {
  color: #3A3A3A;
}
.tab-item .text {
  position: relative;
  height: 33px;
  line-height: 33px;
  display: inline-block;  
  vertical-align: middle;
}
.tab-item.active .text::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #3A3A3A;
}
/* 订单列表 */
.section-box {
  padding-top: 24px;
}
.section {
  margin-top: 10px;
  padding: 0 24px;
  background-color: #fff;
}
.section-header {
  padding: 11px 0 18px;
  display: flex;
  align-items: center;
}
.section-serial {
  flex: 1;
  font-size: 14px;
  color: #3A3A3A;
}
.section-status {
  color: #AD1717;
  font-size: 14px;
}
.section-body {
  display: flex;
  padding-bottom: 17px;
}
.section-image {
  width: 92px;
  height: 92px;
}
.section-content {
  flex: 1;
  margin-left: 10px;
  position: relative;
}
.section-title {
  color: #333333;
  font-size: 14px;
}
.section-desc {
  color: #999999;
  font-size: 12px;
}
.section-rate {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
}
.section-marker {
  color: #AD1717;
  font-size: 12px;
}
.section-price {
  color:  #AD1717;
  font-size: 18px;
}
.section-amount {
  flex: 1;
  text-align: right;
  color: #333333;
  font-size: 13px;
}
.section-footer {
  border-top: 1px solid #E9E9E9;
  text-align: right;
  padding-bottom: 12px;
}
.section-total {
  color: #3A3A3A;
  font-size: 14px;
  padding: 8px 0 10px;
}
.section-operation {
  display: flex;
  align-items: center;
   justify-content: flex-end; 
}
.btn {
  font-size: 13px;
  color: #5B5B5B;
  border: 1px solid #5B5B5B;
  padding: 4px 11px;
  border-radius: 13px;
  display: inline-block;
  text-align: center;
  min-width: 50px;
}
.btn.primary {
  border-color: #AD1717;
  color: #AD1717;
}
.btn + .btn {
  margin-left: 10px;
}