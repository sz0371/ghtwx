page {
  background-color: #F9F9F9;
  height: 100%;
}
.section-info {
  display: flex;
  align-items: center;
  padding: 14px 24px;
  background-color: #fff;
}
.section-image {
  width: 92px;
  height: 92px;
}
.section-content {
  color: #333;
  font-size: 14px;
  margin-left: 16px;
}
.section-timeline {
  margin-top: 10px;
  background-color: #fff;
}
.timeline {
  font-size: 14px;
  color: #3A3A3A;
  position: relative;
  padding-right: 24px;
  display: flex;
}
.timeline-header {
  position: relative;
  width: 15px;
  margin: 0 24px;
}
.timeline-header::before {
  content: ' ';
  position: absolute;
  top: 0;
  left: 50%;
  width: 1px;
  height: 100%;
  background-color: #DDDDDD;
  transform: translateX(-50%);
}
