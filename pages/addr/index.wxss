page {
  display: block;
  min-height: 100%;
  background-color: #F3F3F3;
} 
.item {
  position: relative;
  align-items: center;
  margin: 0 16px;
  padding: 16px 0 6px;
}
.item:last-child {
  margin-bottom: 70px;
}
.item::after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  background-color: #E6E6E6;
}
.item-box {
  font-size: 14px;
}
.item-box-footer {
  text-align: right;
  font-size: 14px;
}
.item-box-footer-desc {
  display: inline-block;
  vertical-align: middle;
  margin-left: 12px;
}
.item-name {
  margin-right: 14px;
}
.item-tag {
  margin-left: 13px;
  font-size: 11px;
  display: inline-block;
   vertical-align: top; 
  width: 30px;
  line-height: 18px;
  background-color: #FFD743;
  text-align: center;
  border-radius: 50px;
}
.item-subtitle {
  font-size: 12px;
  color: #B2B2B2;
  margin-top: 11px;
}
.item-icon {
  width: 17px;
  height: 17px;
}
.item-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}
.button {
  width: 100%;
  background-color: #3A3A3A;
  color: #fff;
  height: 45px;
  line-height: 45px;
  text-align: center;
}
/* 没有地址 */
.address {
  padding-top: 100px;
  text-align: center;
}
.address-img {
  display: block;
  width: 78px;
  height: 100px;
  margin: 0 auto;
}
.address-text {
  margin-top: 12px;
  font-size: 16px;
}